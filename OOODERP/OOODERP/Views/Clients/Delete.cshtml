@using Microsoft.AspNetCore.Mvc.Localization
@model OOODERP.Models.Client
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["TITLE_Delete"];
}

<h2>@ViewData["Title"]</h2>

<h3>@Localizer["lblDeleteConfirmation"]</h3>
<div>
    <h4>@Localizer["lblClient"]</h4>
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="ClientID" />
        <dt>
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ClientName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value=@Localizer["lblDelete"] class="btn btn-default" /> |
            <a asp-action="Index">@Localizer["lblBacktoList"]</a>
        </div>
    </form>
</div>
