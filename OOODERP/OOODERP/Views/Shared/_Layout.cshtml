@using Microsoft.AspNetCore.Mvc.Localization
@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Localizer["Title"]</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/mainmenu.css" />
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/mainmenu.css" />
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    </environment>
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">@Localizer["Title"]</a>
            </div>
            <!--
            <div>
                    <ul class="nav navbar-nav floatright">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">@Localizer["lblHome"]</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="About">@Localizer["lblAbout"]</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Contact">@Localizer["lblContact"]</a></li>
                    </ul>   
            </div>
            -->
        </div>
    </nav>
    <nav id="SystemMenu">
        <ul>
            <li id="Administration">
                <a href="#Administration" class="adminMenu">Administration</a>
                <ul>
                    <li id="User"><a href="#User">User</a></li>
                    <li id="Device"><a href="#Device">Device</a></li>
                    <li id=System><a href="#System">System</a></li>
                </ul>
            </li>
            <li id="MasterInformation">
                <a href="#MasterInformation">Master Information</a>
                <ul>
                    <li id="Client">
                        <a href="#Client">Client</a>
                        <ul>
                            <li><a href="#list1">List 1</a></li>
                            <li><a href="#list2">List 2</a></li>
                        </ul>
                    </li>
                    <li id="Customers"><a href="#Customers">Customers</a></li>
                    <li id="Products"><a href="#Products">Products</a></li>
                    <li id="Location"><a href="#Location">Location</a></li>
                    <li id="Vendors"><a href="#Vendors">Vendors</a></li>
                    <li id="Financial"><a href="#Financial">Financial</a></li>
                </ul>
            </li>
            <li id="OperationSetup">
                <a href="#OperationSetup">Operations Setup</a>
                <ul>
                    <li id="Price"><a href="#Price">Price</a></li>
                    <li id="Promotions"><a href="#Promotions">Promotions</a></li>
                    <li id="CreditTerms"><a href="#CreditTerms">Credit Terms</a></li>
                    <li id="Price"><a href="#Price">Price</a></li>
                </ul>
            </li>
            <li id="TransactionProcessing">
                <a href="#TransactionProcessing">Transaction Processing</a>
                <ul>
                    <li id="Sales"><a href="#Sales">Sales</a></li>
                </ul>
            </li>
            <li id="HelpSupport"><a href="#HelpSupport">Help and Support</a></li>
        </ul>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col=sm-6">
                    <p>&copy; 2017 - @Localizer["Title"]</p>
                </div>
                <div class="col-sm-6 text-right">
                    @await Html.PartialAsync("_SelectLanguagePartial")
                </div>
            </div>

        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
